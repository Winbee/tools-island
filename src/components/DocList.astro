---
import { getCollection } from "astro:content";
const posts = (await getCollection("docs")).filter(
  (post) => post.id != "index.mdx"
);
---

<ul class="p-0 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  {
    posts.map((post) => (
      <a href={`/tools-island/${post.slug}`}>
        <li class="block p-6 bg-white rounded-2xl shadow hover:shadow-lg transition">
          {post.data.title}
        </li>
      </a>
    ))
  }
</ul>
